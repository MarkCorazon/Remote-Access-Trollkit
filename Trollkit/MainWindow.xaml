<Window x:Class="Trollkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trollkit"
        mc:Ignorable="d"
        MouseDown="Drag" 
        Title="MainWindow" Height="550" Width="800" WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    <Canvas Margin="10,0,0,0">
        <Rectangle HorizontalAlignment="Left" Height="350" VerticalAlignment="Top" Width="607" Canvas.Left="52" Canvas.Top="52">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                    <GradientStop Color="#49D4BB" Offset="0.0" />
                    <GradientStop Color="#FC6DFF" Offset="1" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Polygon Points="0, 0, 20, 60, 120, 0" Opacity="0.8" Canvas.Left="609" Canvas.Top="10">
            <Polygon.Fill>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                    <GradientStop Color="#FC6DFF" Offset="0" />
                    <GradientStop Color="#49D4BB" Offset="1" />
                </LinearGradientBrush>
            </Polygon.Fill>
        </Polygon>
        <Image Source="Recourses\Images\Beeld-Apollo-Hoofd-Nieuw.png" Canvas.Top="222" Width="212" Height="242" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <TextBlock Background="Black" Foreground="White" FontStyle="Italic" FontSize="17" Padding="2,0,2,2" Canvas.Left="19" TextWrapping="Wrap" Text="HOOFDMENU" Canvas.Top="310" RenderTransformOrigin="0.5,0.5" Height="24" Width="110">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-17.223"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <local:HeadMenu>
            <local:HeadMenuBtn Style="{StaticResource MenuButton}" Content="> Visual Trolls" Canvas.Top="113">
                <local:HeadMenuBtn.Resources>
                    <local:VisualTrolls x:Key="View" />
                </local:HeadMenuBtn.Resources>
            </local:HeadMenuBtn>
            
            <local:HeadMenuBtn Style="{StaticResource MenuButton}" Content="> Audio Trolls" Canvas.Top="80">
                <local:HeadMenuBtn.Resources>
                    <local:AudioTrolls x:Key="View" />
                </local:HeadMenuBtn.Resources>
            </local:HeadMenuBtn>

            <local:HeadMenuBtn Style="{StaticResource MenuButton}" Content="> Windows Trolls" Canvas.Top="146">
                <local:HeadMenuBtn.Resources>
                    <local:WindowsTrolls2 x:Key="View" />
                </local:HeadMenuBtn.Resources>
            </local:HeadMenuBtn>
            
            <local:HeadMenuBtn Style="{StaticResource MenuButton}" Content="> System Info" Canvas.Top="179">
                <local:HeadMenuBtn.Resources>
                    <local:SystemInfo x:Key="View" />
                </local:HeadMenuBtn.Resources>
            </local:HeadMenuBtn>
        </local:HeadMenu>

        <Polygon Points="0, 0, 20, 60, 120, 0" Opacity="0.8" Canvas.Left="609" Canvas.Top="10">
            <Polygon.Fill>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,1">
                    <GradientStop Color="#FC6DFF" Offset="0" />
                    <GradientStop Color="#49D4BB" Offset="1" />
                </LinearGradientBrush>
            </Polygon.Fill>
        </Polygon>

        <local:CloseBtn Style="{StaticResource CloseBtn}" Content="X" FontWeight="DemiBold" Foreground="White" FontStyle="Italic" Background="Transparent" BorderThickness="0" Canvas.Left="655" Canvas.Top="18" />
        <local:MinimizeBtn Style="{StaticResource MinimizeBtn}" Content="-" FontWeight="Bold" Foreground="White"  FontSize="15" FontStyle="Italic" Background="Transparent" BorderThickness="0" Canvas.Left="636" Canvas.Top="15" Height="20" />
        

        <ContentControl x:Name="trollView" Canvas.Left="226" Canvas.Top="97" Height="355" Width="503"/>
    </Canvas>
</Window>

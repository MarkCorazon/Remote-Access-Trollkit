<Application x:Class="Trollkit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Trollkit"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType = "{x:Type local:HeadMenuBtn}"
            BasedOn = "{StaticResource {x:Type Button}}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" BorderBrush="Gray" BorderThickness="1">
                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType = "{x:Type local:CloseBtn}"
            BasedOn = "{StaticResource {x:Type Button}}">
        </Style>
        <Style TargetType = "{x:Type local:MinimizeBtn}"
            BasedOn = "{StaticResource {x:Type Button}}">
        </Style>
    </Application.Resources>
</Application>

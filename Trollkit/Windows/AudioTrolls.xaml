<windows:TrollControl
	xmlns:windows="clr-namespace:Trollkit.Windows"
	x:Class="Trollkit.Windows.AudioTrolls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" Height="580.5" Width="834.5">
	<Canvas>
		<Rectangle HorizontalAlignment="Left" Height="378" VerticalAlignment="Top" Width="634" Canvas.Top="22" Canvas.Left="10"  RenderTransformOrigin="0.5,0.5" Fill="White">
			<Rectangle.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-1.486"/>
					<TranslateTransform/>
				</TransformGroup>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Rectangle HorizontalAlignment="Left" Height="378" VerticalAlignment="Top" Width="634" Canvas.Top="20" Canvas.Left="12"  RenderTransformOrigin="0.5,0.5" Fill="#FF1C83FF">
			<Rectangle.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-1.486"/>
					<TranslateTransform/>
				</TransformGroup>
			</Rectangle.RenderTransform>
		</Rectangle>
		<Label x:Name="HeaderText" Content="xD" Canvas.Left="46" Canvas.Top="47" Height="135" Width="165" FontSize="90" RenderTransformOrigin="0.5,0.5" IsEnabled="False" Foreground="White" FontFamily="Microsoft YaHei Light">
			<Label.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-2.509"/>
					<TranslateTransform/>
				</TransformGroup>
			</Label.RenderTransform>
		</Label>
		<TextBlock Canvas.Left="53" TextWrapping="Wrap" Text="Your PC wants to preform an audo troll, please select an option." Canvas.Top="160" RenderTransformOrigin="0.5,0.5" Height="66" Width="360" FontSize="20" Foreground="White" FontWeight="ExtraLight">
			<TextBlock.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-2.844"/>
					<TranslateTransform/>
				</TransformGroup>
			</TextBlock.RenderTransform>
		</TextBlock>
		<Button Name="btnBeep" Content="Beep" Canvas.Left="52" Canvas.Top="240" Width="99" Height="33" RenderTransformOrigin="0.5,0.5" Click="BtnBeep_Click">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-3.037"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button x:Name="MyNameIsJeff" Content="My name is Jeff" Canvas.Left="55" Canvas.Top="284" Width="99" Height="33" RenderTransformOrigin="0.5,0.5" Click="BtnMyNameIsJeff_Click">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-3.142"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button Content="Wessel Move" Canvas.Left="57" Canvas.Top="326" Width="99" Height="33" RenderTransformOrigin="0.5,0.5" Click="BtnWesselMove_Click" >
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-3.481"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button Content="Volume Up" Canvas.Left="215" Canvas.Top="231" Width="99" Height="33" RenderTransformOrigin="0.5,0.5" Click="BtnVolumeUp_Click">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-3.596"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button Content="Volume Down" Canvas.Left="217" Canvas.Top="273" Width="99" Height="33" RenderTransformOrigin="0.5,0.5" Click="BtnVolumeDown_Click_Click">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-3.608"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Button Content="PlayPauze" Canvas.Left="219" Canvas.Top="313" Width="99" Height="33" RenderTransformOrigin="0.5,0.5" Click="BtnPlayPauze_Click">
			<Button.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-3.617"/>
					<TranslateTransform/>
				</TransformGroup>
			</Button.RenderTransform>
		</Button>
		<Image Source="..\Resources\Images\Sirenhead.png" Canvas.Top="48" Width="406" Height="517" RenderTransformOrigin="0.5,0.5" Canvas.Left="325">
			<Image.RenderTransform>
				<TransformGroup>
					<ScaleTransform/>
					<SkewTransform/>
					<RotateTransform Angle="-0.391"/>
					<TranslateTransform/>
				</TransformGroup>
			</Image.RenderTransform>
		</Image>
	</Canvas>
</windows:TrollControl>

<UserControl
	xmlns:windows="clr-namespace:Trollkit.Windows"
	x:Class="Trollkit.Windows.AudioTrolls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" Height="580.5" Width="834.5">
    <Canvas>
        <Rectangle Style="{StaticResource VisualWhite}"/>
        <Rectangle Style="{StaticResource VisualBlue}"/>
        <Label Style="{StaticResource HeaderText}" Content="xD"/>
        <TextBlock Canvas.Left="53" TextWrapping="Wrap" Text="Your PC wants to preform an audo troll, please select an option." Canvas.Top="160" RenderTransformOrigin="0.5,0.5" Height="66" Width="360" FontSize="20" Foreground="White" FontWeight="ExtraLight">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-2.844"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button Style="{StaticResource AudioFileButton}" 
				Name="btnBeep"  
				Canvas.Left="52" 
				Canvas.Top="240" 
				RenderTransformOrigin="0.5,0.5"
				Command="{Binding Audio.Beep}">
            <TextBlock 
				Text="> Beep"/>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-3.037"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Style="{StaticResource AudioFileButton}" Canvas.Left="55" Canvas.Top="284" RenderTransformOrigin="0.5,0.5" Command="{Binding Audio.MyNameIsJeff}">
            <TextBlock Text="> My name is Jeff"/>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-3.142"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Style="{StaticResource AudioFileButton}" Canvas.Left="57" Canvas.Top="326" RenderTransformOrigin="0.5,0.5" Command="{Binding Audio.WesselMove}" >
            <TextBlock Text="> Wessel Move"/>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-3.481"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Image Source="..\Resources\Images\Sirenhead.png" Canvas.Top="48" Width="406" Height="517" RenderTransformOrigin="0.5,0.5" Canvas.Left="325" >
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.391"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button Style="{StaticResource ControlButton}" Canvas.Left="476" Canvas.Top="36" Width="62" Height="62" RenderTransformOrigin="0.565,0.471" Command="{Binding Audio.Mute}" Foreground="{x:Null}" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="..\Resources\Images\volume-mute.png" />
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform Angle="220.024"/>
                    <TranslateTransform X="-8.255" Y="1.199"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Style="{StaticResource ControlButton}" Canvas.Left="465" Canvas.Top="104" Width="62" Height="62" RenderTransformOrigin="0.5,0.5" Command="{Binding Audio.VolumeDown}" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="..\Resources\Images\volume-down.png" />
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="525"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Style="{StaticResource ControlButton}" Canvas.Left="525" Canvas.Top="58" Width="79" Height="77" RenderTransformOrigin="0.5,0.5" Command="{Binding Audio.VolumeUp}" BorderBrush="{x:Null}" Foreground="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="..\Resources\Images\volume-up.png" />
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="345.208"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Style="{StaticResource ControlButton}" Canvas.Left="448" Canvas.Top="215" Width="24" Height="25" RenderTransformOrigin="0.5,0.5" Command="{Binding Audio.Previous}">
            <Button.Background>
                <ImageBrush ImageSource="..\Resources\Images\Prev.png" />
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-3.608"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button Style="{StaticResource ControlButton}" Canvas.Left="516" Canvas.Top="209" Width="25" Height="25" RenderTransformOrigin="0.5,0.5" Command="{Binding Audio.PlayPause}" >
            <Button.Background>
                <ImageBrush ImageSource="{Binding Audio.Button}"/>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-4.635"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Button Style="{StaticResource ControlButton}" Canvas.Left="583" Canvas.Top="201" Width="24" Height="26" RenderTransformOrigin="0.5,0.5" Command="{Binding Audio.Next}">
            <Button.Background>
                <ImageBrush ImageSource="..\Resources\Images\Next.png" />
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-3.608"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Canvas>
</UserControl>

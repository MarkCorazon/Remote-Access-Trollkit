<UserControl
	xmlns:windows="clr-namespace:Trollkit.Windows"
	x:Class="Trollkit.Windows.CMDShell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:resources="clr-namespace:Trollkit.Resources"
    mc:Ignorable="d" Height="456" Width="634">
    <UserControl.Resources>
        <resources:ProfilePictureImageConverter x:Key="ImageConverter"/>
    </UserControl.Resources>
    <Canvas Margin="10,0,10,56">
        <Rectangle Fill="Black" Width="614" Height="372"/>
        <StackPanel Background="#ffffff" Width="614" Height="24" Orientation="Horizontal" >
            <Image Source="..\Resources\Images\cmd_icon.png" Width="16" Height="13" Margin="7,3,3,3" />
            <Label Content="Command Prompt" Width="auto" Padding="3,5,0,0" FontSize="10"/>
            <Button Content="_" FontSize="25" FontWeight="Light" Padding="9,0,9,0" Margin="410,-26,0,0" Foreground="#999999" Background="Transparent" BorderBrush="Transparent"></Button>
            <Button Content="[]" FontSize="10" FontWeight="Light" Padding="9,0,9,0" Margin="0,-14,0,0" Foreground="#999999" Background="Transparent" BorderBrush="Transparent"></Button>
            <Button Content="x" FontSize="20" FontWeight="Light" Padding="9,0,9,0" Margin="0,-7,0,0" Foreground="#999999" Background="Transparent" BorderBrush="Transparent"></Button>
        </StackPanel>

    </Canvas>
</UserControl>
